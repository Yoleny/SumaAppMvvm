

    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SumaAppMvvm"
             x:Class="SumaAppMvvm.MainPage">

        <StackLayout Padding="20">
            <Entry x:Name="valor1Entry" Placeholder="Valor 1" Keyboard="Numeric" />
            <Entry x:Name="valor2Entry" Placeholder="Valor 2" Keyboard="Numeric" />

            <Button Text="Sumar" Command="{Binding SumarCommand}" />

            <Label x:Name="resultadoLabel" />

            <Button Text="Limpiar" Command="{Binding LimpiarCommand}" />
        </StackLayout>

    </ContentPage>

